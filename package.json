{
  "name": "bemmed",
  "version": "1.2.0",
  "description": "BEM class name composer.",
  "main": "lib/bemmed.js",
  "scripts": {
    "build": "babel src --out-dir lib",
    "prepublish": "npm run build",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prettier": "prettier --write './(declarations|src|test)/**/*.(js|d.ts)'",
    "test": "eslint . && nyc npm run test:unit",
    "test:unit": "mocha"
  },
  "keywords": [
    "bem",
    "css",
    "class",
    "composer",
    "block",
    "element",
    "modifier"
  ],
  "sideEffects": false,
  "typings": "declarations/bemmed.d.ts",
  "repository": "https://github.com/frontendr/bemmed",
  "author": "Johan Arensman <info@frontendr.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "babel-eslint": "^10.1.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-prettier": "^3.3.0",
    "mocha": "^8.2.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1"
  }
}
